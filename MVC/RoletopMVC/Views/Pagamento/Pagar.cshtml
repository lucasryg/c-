<link href="~/css/cadasterstyle.css" rel="stylesheet" type="text/css">
<main>
        <div id="closenav">     
            <a asp-controller="Home" asp-action="Index"><img src="../img/back white.png" alt="Fechar" title="fechar janela" style="width: 40px;padding-top: 10px;padding-right: 10px;"></a>
        </div>
        <section class="paga">
            <img id="bandeiras" src="../img/BANDEIRAS PAGAMENTO.png">
            
            <div id="color" style="width: 550px;">
                    
                    
                    
                    <form method="POST" action='@Url.Action("Pagar","Pagamento")'>

                        <label for="tipoevento">Selecione seu tipo de evento</label>
                        <select name="tipoevento">
                        @foreach(var tipoevento in Model.TiposdeEventos){
                        <option value="@tipoevento">@tipoevento</option>
                        }
                        </select>

                        <label for="tipoevento">Seu evento vai ser</label>
                        <select name="PubPriv">
                        <option value="publico">Público</option>
                        <option value="privado">Privado</option>
                        </select>
                        
                        <input type="checkbox" name="iluminacao"> iluminação <br>

                        <input type="checkbox" name="som"> Som <br>

                        
                        <label for="tipoevento">Forma de pagamento</label>
                        <select name="formeDePagamento">
                        <option value="debito">Débito</option>
                        <option value="credito">Crédito</option>
                        </select>

                        <input  type="text" name="numero"  placeholder="Digite o número do seu cartão">    
                
                        <input  type="text" name="nome"   placeholder="Digite o nome impresso no seu cartão">

                        <div id="fodas">
                            <input type="alo" maxlength="5" minlength="4" placeholder="Data de vencimento" name="vencimento" />
                                
                            <input  type="alo" name="cvv" maxlength="3" minlength="3" placeholder="CVV">
                        </div>
                 
                        <input type="submit" name="submit" value="Cadastrar">
                    </form>
                </div>
                
            </section>
    </main>